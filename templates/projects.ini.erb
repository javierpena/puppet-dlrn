[DEFAULT]
datadir=/home/<%= @name %>/data
scriptsdir=/home/<%= @name %>/dlrn/scripts
templatedir=/home/<%= @name %>/dlrn/dlrn/templates
baseurl=<%= @baseurl %>
distro=<%= @distgit_branch %>
source=<%= @distro_branch %>
target=<%= @target %>
reponame=delorean
tags=<%= @release %>
workers=<%= @worker_processes %>
<% if @server_type == 'primary' %>
smtpserver=<%= @dlrn_mailserver %>
<% if @rsyncdest %>rsyncdest=<%= @rsyncdest %><% end %>
<% if @rsyncport %>rsyncport=<%= @rsyncport %><% end %>
<% if @gerrit_user %>gerrit=yes
gerrit_topic=<%= @gerrit_topic %><% end %>
<% elsif @server_type == 'passive' %>
smtpserver=
<% end %>
pkginfo_driver=<%= @pkginfo_driver %>
database_connection=<%= @db_connection %>
<% if @pkginfo_driver == 'dlrn.drivers.gitrepo.GitRepoDriver' %>
[gitrepo_driver]
repo=<%= @gitrepo_repo %>
directory=<%= @gitrepo_dir %>
skip=<%= @gitrepo_skip.join(",") %>
use_version_from_spec=<%= @gitrepo_use_version_from_spec %>
<% end %>

